


            <h1  class="post-title">Authentification</h1>
{{ form_start(form) }}
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                {{ form_widget(form.firstname, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                {{ form_widget(form.lastname, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            {% if app.user.id == user.id and app.user.roles.0 != 'ROLE_ADMIN'%}
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                {{ form_widget(form.password.first, { 'attr': { 'class': 'form-control' } }) }}
            </div>

            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                {{ form_widget(form.password.second, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            {% endif %}

            {% if app.user.roles.0 == 'ROLE_ADMIN' and app.user.id != user.id %}
            <div class=" form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-mouse-pointer"></i></span>
                </div>
                {{ form_widget(form.roles, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            {% endif %}



            <div class="col-lg-10 btn-group" >
            <button type="submit" class="btn btn-outline-success">
                <span class="btn-label"><i class="fas fa-sign-in-alt"></i></span> {{ button_label|default('Save') }}</button>
            </div>
{{ form_end(form) }}
