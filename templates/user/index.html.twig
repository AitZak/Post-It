{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<div id="page-top">
<div class="container" id="down">
    <div class="row">
        <div class="col-lg-12 col-md-10 mx-auto">
            <h1 class="post-title">Liste des Utilisateurs  </h1>
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
    <h1></h1>

                <a class="btn btn-outline-dark" href="{{ path('user_new') }}"><span class="btn-label"><i class="fas fa-plus" ></i></span>
                    New</a>
            <hr>
            <table class="table table-bordered" id="user_table">
                <thead class="thead-dark">
                
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Email</th>

                <th scope="col">Role</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            {% if app.user.id != user.id %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.email }}</td>

                <td>
                    {% for role in user.roles %}
                    {{ role }}<br>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('user_edit_admin', {'id': user.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


        </div>
    </div>
</div>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready( function () {
            $('#user_table').DataTable();
        } );
    </script>
{% endblock %}
