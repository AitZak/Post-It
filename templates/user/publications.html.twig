{% extends 'base.html.twig' %}

{% block body %}
    <div id="page-top">
    <div class="container" id="down" >
    <div class="row">
    <div class="col-lg-10 col-md-10 mx-auto">
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card bg-secondary text-white shadow">
                    <div class="card-body">
                        vos soumissions publiées
                        <div class="text-white-50 small">{{ publicationsInfos.nbPublications }} review(s).</div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-10">
                <div class="card shadow mb-4">
                    <!-- Card Header - Accordion -->
                    <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse" role="button" aria-expanded="true" aria-controls="collapseCardExample">
                        <h6 class="m-0 font-weight-bold text-primary">Mes soumissions publiées</h6>
                    </a>
                    <!-- Card Content - Collapse -->
                    <div class="collapse hide" id="collapseCardExample">
                        <div class="card-body">
                            {% for publication in publicationsInfos.publications %}
                                <li><a href="{{ path('content_show', {'id': publication.id}) }}">{{ publication.title }}</a></li>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        </div>
   


    </div>
    </div>
    </div>
    </div>
{% endblock %}