
<form method="post" action="{{ path('social_network_delete', {'id': social_network.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ social_network.id) }}">
    <button type="submit" class="btn btn-outline-danger ">
        <span class="btn-label"><i class="fas fa-trash-alt"></i></span> Supprimer</button>
</form>
