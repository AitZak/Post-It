{{ form_start(form) }}

<div class="input-group form-group">
    <div class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-user"></i>
            Name</span>
    </div>
    {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="input-group form-group">
    <div class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-user"></i> ClientId</span>
    </div>
    {{ form_widget(form.clientId, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="input-group form-group">
    <div class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-user"></i> ClientSecret</span>
    </div>
    {{ form_widget(form.clientSecret, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="input-group form-group">
    <div class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-user"></i> Token</span>
    </div>
    {{ form_widget(form.token, { 'attr': { 'class': 'form-control' } }) }}
</div>

<div class="input-group form-group">
    <div class="input-group-prepend">
        <span class="input-group-text"><i class="fas fa-user"></i> TokenSecret</span>
    </div>
    {{ form_widget(form.tokenSecret, { 'attr': { 'class': 'form-control' } }) }}
</div>


<button type="submit" class="btn btn-outline-success">
    <span class="btn-label"><i class="fas fa-plus"></i></span> {{ button_label|default('Ajouter') }}</button>
{{ form_end(form) }}
