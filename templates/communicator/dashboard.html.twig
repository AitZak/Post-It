{% extends 'base.html.twig' %}

{% block body %}

<div class="container" id="down">
    <div class="row">
        <div class="col-lg-12 col-md-10 mx-auto">
    <h1 class="post-title">Statistiques des Contenus</h1>

            <table class="table content_index" style="font-size: 17px">
                <thead class="thead-dark">

                <tr>
                    <th scope="col">Derniers contenus acceptée</th>

                </tr>
                </thead>
                <tbody>
                {% for content in contents %}
                <tr>

                    <td><a href="{{ path('content_show', {'id': content.id}) }}">{{ content.title }}</a></td>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>


    <h2>Statistiques</h2>
    <p>Nombre total de contenus (revues/publiées):  <strong>{{ contentStats.nbContents }} (<span style="color: forestgreen">{{ contentStats.nbReviewedContents }}</span>/<span style="color: darkred">{{ contentStats.nbPublishedContents }}</span>)</strong></p>
    <p>Nombre total de review (accéptées/refusées):  <strong>{{ approvalStats.nbApprovals }} (<span style="color: forestgreen">{{ approvalStats.nbAcceptedApprovals }}</span>/<span style="color: darkred">{{ approvalStats.nbRejectedApprovals }}</span>)</strong></p>

        </div>
    </div>
</div>

            {% endblock %}
