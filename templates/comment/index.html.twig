{% extends 'base.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
<div class="container" id="down">
<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
    <h1 class="post-title">Commentaires</h1>

    <table class="table table-bordered" >
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Message</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.message }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}"> <i class="fas fa-eye"></i></a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}"> <i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <button type="submit" class="btn btn-outline-dark">
            <a href="{{ path('comment_new') }}" ><span class="btn-label"><i class="fas fa-plus" ></i></span>
                New</a></button>

    </div>
</div>
</div>
{% endblock %}
