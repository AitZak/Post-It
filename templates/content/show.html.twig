{% extends 'base.html.twig' %}

{% block title %}Content{% endblock %}

{% block body %}
<div id="page-top">
<div class="container" id="down">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
            <h1 class="post-title">{{ content.title }}
                <span class="btn-label"><i style="color: green" class="fas fa-thumbs-up">{{ approvals.nbAcceptedApprovals }}</i></span>
                <span class="btn-label"><i style="color: red" class="fas fa-thumbs-down">{{ approvals.nbRejectedApprovals }}</i></span>
            </h1>
            <h1 class="post-title" style="display: inline-block">

                {% if currentUser.roles.0 in ['ROLE_REVIEWER', 'ROLE_COMM', 'ROLE_ADMIN'] %}
                {% if currentUserApproval is empty %}
                    <p class="h4">Vous n'aveé pas encore émis de review.</p>
                {% elseif currentUserApproval.status == 1 %}
                    <p class="h4">Vous avez accepté ce contenu.</p>
                {% elseif currentUserApproval.status == 2 %}
                    <p class="h4">Vous avez refusé ce contenu.</p>
                {% endif %}
                <button {% if currentUserApproval is not empty and currentUserApproval.status == 2 %} style="opacity: 25%" {% endif %} class="btn btn-success"  value="1"><span class="btn-label"><i class="fas fa-check"></i></span> Approuvé</button>
                <button {% if currentUserApproval is not empty and currentUserApproval.status == 1 %} style="opacity: 25%" {% endif %}class="btn btn-danger" value="2"> <span class="btn-label"><i class="fas fa-ban"></i></span> Rejeté</button>
                {% endif  %}

                <button type="submit" class="btn btn-outline-primary">
                    <a href="{{ path('content_edit', {'id': content.id}) }}"><span class="btn-label"><i class="fas fa-edit"></i></span>
                        edit</a></button>
            </h1>
               {{ include('content/_delete_form.html.twig') }}

    <table class="table table-bordered"  >
        <thead class="thead-dark">
        <tbody>
            <tr>
                 <th scope="col">Id</th>
                <td>{{ content.id }}</td>
            </tr>
            <tr>
                 <th scope="col">Title</th>
                <td>{{ content.title }}</td>
            </tr>
            <tr>
                 <th scope="col">Description</th>
                <td>{{ content.description }}</td>
            </tr>
            <tr>
                 <th scope="col">File</th>
                <td>{{ content.file }}</td>
            </tr>
            <tr>
                 <th scope="col">SubmitUser</th>
                <td>{{ content.userSubmit.firstname ? content.userSubmit.firstname : '' }}</td>
            </tr>
            <tr>
                 <th scope="col">SubmitDate</th>
                <td>{{ content.submitDate ? content.submitDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                 <th scope="col">ApprovalDate</th>
                <td>{{ content.approvalDate ? content.approvalDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                 <th scope="col">PublicationDate</th>
                <td>{{ content.publicationDate ? content.publicationDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
                <button type="submit" class="btn btn-outline-primary">
                    <a href="{{ path('content_index') }}"> <span class="btn-label"><i
                                    class="fas fa-arrow-left"></i></span>
                        back to list</a></button>
            <hr>
    <h5 class="post-title">Laissez un commentaire</h5>

                {{ include('comment/_form.html.twig') }}

    <h5>Commentaires</h5>

            {{ include('comment/comment.html.twig') }}
    <br>

            </div>
        </div>
    </div>
</div>



{% endblock %}

{% block javascripts %}
    <script language="javascript"
            src="https://code.jquery.com/jquery-2.2.4.min.js">
    </script>
    <script>
        $(function(){
            $("#publish").click(function() {
                $.ajax({
                    url: '{{ path('publish') }}',
                    type: 'GET',
                    data: {contentId: {{content.id}}},

                    success: function(data) {
                        alert("contenu publié");
                        location.reload(true);
                    },
                    error : function(xhr, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
            });
        });
        $(function(){
            $(".review").click(function() {
                var contentStatus = $(this).val();
                $.ajax({
                    url: '{{ path('approval_new') }}',
                    type: 'POST',
                    data: {content_id: {{ content.id }}, status: contentStatus},

                    success: function (data, status) {
                        alert(data)

                        location.reload();
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        alert(errorThrown);
                    }
                });
            });
        });

        $(document).ready(function(){


            $("[data-toggle=tooltip]").tooltip();
        });
    </script>
{% endblock %}
